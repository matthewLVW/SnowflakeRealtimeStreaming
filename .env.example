# Kafka infrastructure
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_RAW=ticks.raw
KAFKA_TOPIC_AGG=ticks.agg.1s

# Mock tick source
MOCK_API_URL=http://localhost:8000/ticks
MOCK_HEALTH_URL=http://localhost:8000/health

# Historical replay controls
REPLAY_SYMBOL=WDC
REPLAY_BIN_MS=10
REPLAY_SPEED=0
REPLAY_LOOP=false
REPLAY_MAX_LATE_MS=500

# Aggregator
AGG_INPUT_TOPIC=ticks.raw
AGG_OUTPUT_TOPIC=ticks.agg.1s
AGG_IDEMPOTENT_KEY=bin_id

# Snowflake (leave empty or override)
SNOW_ACCOUNT=
SNOW_USER=
SNOW_PASSWORD=
SNOW_PRIVATE_KEY_PATH=
SNOW_PRIVATE_KEY_B64=
SNOW_ROLE=
SNOW_WAREHOUSE=
SNOW_DATABASE=
SNOW_SCHEMA=
SNOW_STAGE=RAW_STAGE
SNOW_TABLE=FACT_TICKS_1S
SNOWFLAKE_1S_GROUP=snowflake-1s-loader
SNOWFLAKE_STREAM_BATCH_SIZE=100
SNOWFLAKE_STREAM_POLL_MS=1000
SNOWFLAKE_MINUTE_TABLE=FACT_TICKS_60S
SNOWFLAKE_FIVEM_TABLE=FACT_TICKS_300S
SNOWFLAKE_LOADER_GROUP=snowflake-minute-loader
SNOWFLAKE_FLUSH_MINUTES=5
SNOWFLAKE_POLL_TIMEOUT_MS=1000
SNOWFLAKE_IDLE_SETTLE_MS=120000

